generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  ops_lead
  fleet_manager
  vendor
  viewer
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  passwordHash String
  role         Role
  orgId        String
  name         String
  isActive     Boolean   @default(true)
  lastLogin    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  sessions     Session[]

  @@index([username])
  @@index([email])
  @@index([orgId])
}

model Session {
  id           String   @id @default(cuid())
  sessionId    String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAgent    String?
  ipAddress    String?
  deviceInfo   String?  // JSON string for device details
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  lastAccessed DateTime @updatedAt

  @@index([sessionId])
  @@index([userId])
  @@index([expiresAt])
}
